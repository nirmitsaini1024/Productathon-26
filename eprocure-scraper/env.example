## Copy this file to `.env` (same folder as package.json) and fill in values.
## IMPORTANT: Never commit `.env` to git.

# MongoDB
MONGO_URI=
# MONGO_DB=
# MONGO_COLLECTION=tenders
# MONGO_MODE=single           # or: per_keyword
# MONGO_INSERT_ONLY=1         # 1 = only insert new docs, never update existing ones
# MONGO_STRICT=1              # 0 = don't fail run on Mongo errors
# MONGO_RESET=0               # only used when RESET=1

# Scraper
# KEYWORDS=diesel,bitumen
# DELAY_MS=3000
# RESET=0
# SKIP_DETAILS=0
# DOWNLOAD_DOCS=0

# Tender247 API (optional)
# T247_SEARCH_URL=https://t247_api.tender247.com/apigateway/T247Tender/api/tender/search-tender
# T247_AUTHORIZATION=Bearer ...
