# MongoDB Configuration
MONGO_URI="mongodb+srv://username:password@cluster.mongodb.net/database"
MONGO_DB=""  # Optional: override database name
MONGO_COLLECTION="tenders"  # Collection name for tenders
MONGO_MODE="single"  # "single" or "per_keyword"
MONGO_INSERT_ONLY="0"  # Set to "1" to only insert new docs, never update
MONGO_RESET="0"  # Set to "1" to clear collection on startup (with RESET=1)
MONGO_STRICT="1"  # Set to "0" to continue on mongo errors

# Email Configuration (Resend)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxx"
RESEND_FROM="HPCL Leads <onboarding@resend.dev>"

# Scraper Configuration
KEYWORDS="bitumen,cement"  # Optional: override keywords list
DELAY_MS="3000"  # Delay between keyword searches (ms)
SKIP_DETAILS="0"  # Set to "1" to skip detail scraping
DOWNLOAD_DOCS="0"  # Set to "1" to download documents
RESET="0"  # Set to "1" to reset output files

# Enrichment Service (Optional)
ENRICH_URL="http://localhost:8000/enrich"

# Cron Job Configuration
CRON_SCHEDULE="*/30 * * * *"  # Every 30 minutes (configurable)
RUN_ON_STARTUP="0"  # Set to "1" to run immediately on startup

# Note: Notifications are sent to all officers in the MongoDB "officers" collection
# Add officers via: POST /api/officers or visit /officer-onboarding
# Each officer needs: name, email, and optionally phone number

# Twilio Configuration for WhatsApp (REQUIRED for WhatsApp notifications)
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxx"  # Your Twilio Account SID
TWILIO_AUTH_TOKEN="your_auth_token"  # Your Twilio Auth Token
TWILIO_WHATSAPP_FROM="whatsapp:+14155238886"  # Twilio WhatsApp number
TWILIO_WHATSAPP_CONTENT_SID="HXxxxxxxxxxxxxxxxxxxxxxxxxxx"  # WhatsApp template SID

# Officers Collection (optional - for customization)
OFFICERS_MONGO_COLLECTION="officers"  # Collection name for officers
